# Recursion test
#
# t1 = a -> a -> t1
# u1 = b -> b -> u1
# P  = t1 [] u1
#
# P can either do an infinite sequence of a's, or an infinite sequence
# of b's, but it cannot do any combination of both.

event a;
event b;

process $t1;
process $t2;
prefix $t1 = a -> $t2;
prefix $t2 = a -> $t1;

process $u1;
process $u2;
prefix $u1 = b -> $u2;
prefix $u2 = b -> $u1;

process P;
extchoice P = $t1 [] $u1;
